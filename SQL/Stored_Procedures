CREATE PROCEDURE Insert_Review
@stars INT,
@ReviewMsg VARCHAR(200),
@FromUserID INT,
@PostedDate DATETIME
AS
BEGIN
	INSERT INTO Review Output inserted.ReviewID VALUES (@stars, @ReviewMsg, @FromUserID, @PostedDate);
END
GO


